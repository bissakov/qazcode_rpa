{
  "$schema": "https://opencode.ai/config.json",
  "theme": "kanagawa",
  "model": "github-copilot/claude-haiku-4.5",
  "small_model": "github-copilot/claude-haiku-4.5",
  "autoupdate": true,
  "agent": {
    "build": {
      "mode": "primary",
      "model": "github-copilot/claude-haiku-4.5",
      "tools": {
        "write": true,
        "edit": true,
        "bash": false,
        "task": false
      }
    }
  },
  "lsp": false,
  "formatter": {
    "rustfmt": {
      "command": [
        "cargo",
        "fmt",
        "$FILE"
      ],
      "extensions": [
        ".rs"
      ]
    }
  }
}
