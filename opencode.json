{
  "$schema": "https://opencode.ai/config.json",
  "theme": "kanagawa",
  "model": "github-copilot/claude-haiku-4.5",
  "small_model": "opencode/big-pickle",
  "autoupdate": true,
  "agent": {
    "build": {
      "mode": "primary",
      "model": "github-copilot/claude-haiku-4.5",
      "permission": {
        "bash": {
          "*": "ask",
          "git status": "allow",
          "git pull": "deny",
          "git checkout": "deny",
          "git checkout *": "deny",
          "git commit -m *": "deny",
          "git commit": "deny",
          "git push": "deny",
          "git push *": "deny",
          "git fetch": "deny",
          "git fetch *": "deny",
          "git branch": "deny",
          "git branch *": "deny",
          "git tag": "deny",
          "git tag *": "deny",
          "git worktree": "deny",
          "git worktree *": "deny",
          "git restore": "deny",
          "git restore *": "deny",
          "git stash": "deny",
          "git stash *": "deny",
          "git reset --hard": "deny",
          "git reset --hard *": "deny",
          "git reset": "deny",
          "git reset *": "deny",
          "git rebase": "deny",
          "git rebase *": "deny",
          "git merge": "deny",
          "git merge *": "deny",
          "git clean -fd": "deny",
          "git clean -fd *": "deny",
          "git filter-branch": "deny",
          "git filter-branch *": "deny",
          "git remote add": "deny",
          "git remote add *": "deny",
          "git remote remove": "deny",
          "git remote remove *": "deny",
          "git remote set-url": "deny",
          "git remote set-url *": "deny",
          "git clone": "deny",
          "git clone *": "deny",
          "git init": "deny",
          "git init *": "deny",
          "git reflog": "deny",
          "git reflog *": "deny",
          "git gc": "deny",
          "git gc *": "deny",
          "git branch -D": "deny",
          "git branch -D *": "deny",
          "gh install *": "deny",
          "gh auth *": "deny",
          "gh repo *": "deny",
          "gh pr *": "deny",
          "gh issue *": "deny",
          "gh gist *": "deny",
          "gh release *": "deny",
          "gh workflow *": "deny",
          "gh actions *": "deny",
          "docker build *": "deny",
          "docker run *": "deny",
          "docker pull *": "deny",
          "docker push *": "deny",
          "docker rm *": "deny",
          "docker rmi *": "deny",
          "docker exec *": "deny",
          "docker-compose up *": "deny",
          "docker-compose down *": "deny",
          "kubectl apply *": "deny",
          "kubectl delete *": "deny",
          "kubectl get *": "deny",
          "kubectl describe *": "deny",
          "kubectl logs *": "deny",
          "kubectl exec *": "deny",
          "npm install -g *": "deny",
          "pip install *": "deny",
          "apt-get install *": "deny",
          "yum install *": "deny",
          "brew install *": "deny",
          "curl *": "deny",
          "wget *": "deny",
          "sudo *": "deny",
          "dd if=*": "deny",
          "dd of=*": "deny",
          "shutdown *": "deny",
          "reboot *": "deny",
          "init 0": "deny",
          "init 6": "deny",
          "mkfs.*": "deny",
          "chmod 777 *": "deny",
          "rm -rf *": "deny",
          "rm *": "ask",
          "mv *": "ask"
        }
      }
    }
  },
  "lsp": false,
  "formatter": {}
}
